# ============================================================================
# Django First Site - Environment Configuration Template
# ============================================================================
# Copy this file to .env and configure the values for your deployment
# IMPORTANT: Never commit the actual .env file to version control!
#
# Usage:
#   1. Copy this file: cp .env.example .env
#   2. Edit .env with your specific values
#   3. The application will load these values on startup
#
# ============================================================================

# ============================================================================
# CORE SETTINGS
# ============================================================================

# Set to True for development, False for production
DEBUG=True

# Django secret key - MUST be unique and secret in production
# Generate a strong key: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-super-secret-key-here

# Comma-separated list of allowed hostnames
# Example: localhost,127.0.0.1,yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable HTTPS redirect (set to True in production)
SECURE_SSL_REDIRECT=False

# Enable secure cookies (set to True in production)
CSRF_COOKIE_SECURE=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True

# HSTS (HTTP Strict Transport Security) - in seconds, 1 year = 31536000
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# Database engine: django.db.backends.sqlite3, django.db.backends.postgresql, django.db.backends.mysql
DB_ENGINE=django.db.backends.sqlite3

# For SQLite (default - local development only)
# These are ignored if using SQLite

# For PostgreSQL
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=your_database_name
# DB_USER=postgres
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=5432

# For MySQL
# DB_ENGINE=django.db.backends.mysql
# DB_NAME=your_database_name
# DB_USER=root
# DB_PASSWORD=your_password
# DB_HOST=localhost
# DB_PORT=3306

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

# Email backend: For production use SMTP
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP Configuration (for production)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# DEFAULT_FROM_EMAIL=your-email@gmail.com

# ============================================================================
# CACHING CONFIGURATION
# ============================================================================

# Cache backend: locmem (development), redis (production recommended)
CACHE_BACKEND=django.core.cache.backends.locmem.LocMemCache
CACHE_LOCATION=django-cache

# For Redis cache (recommended for production):
# CACHE_BACKEND=django_redis.cache.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================

# Session age in seconds (2 weeks = 1209600)
SESSION_COOKIE_AGE=1209600

# ============================================================================
# FILES AND MEDIA
# ============================================================================

# Static files root directory (will be created if it doesn't exist)
STATIC_ROOT=./staticfiles

# Media files root directory
MEDIA_ROOT=./media

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log file location (must have write permissions)
LOG_FILE=./logs/django.log
LOG_LEVEL=INFO

# ============================================================================
# THIRD-PARTY SERVICES (Optional)
# ============================================================================

# Add any third-party service credentials here
# Example: Analytics, CDN, Cloud Storage, etc.

# ============================================================================
# DEPLOYMENT-SPECIFIC SETTINGS
# ============================================================================

# Environment identifier: development, staging, production
ENVIRONMENT=development

# Enable debug toolbar in development
DEBUG_TOOLBAR_ENABLED=True

# ============================================================================
# NOTES FOR DEPLOYMENT
# ============================================================================
#
# PRODUCTION CHECKLIST:
# 1. Set DEBUG=False
# 2. Generate a strong SECRET_KEY
# 3. Set ALLOWED_HOSTS to your domain(s)
# 4. Use a production database (PostgreSQL recommended)
# 5. Configure email service (AWS SES, SendGrid, Gmail, etc.)
# 6. Set SECURE_SSL_REDIRECT=True
# 7. Set CSRF_COOKIE_SECURE=True and SESSION_COOKIE_SECURE=True
# 8. Use a production-grade cache backend (Redis)
# 9. Configure proper logging
# 10. Set up HTTPS/SSL certificates
# 11. Run: python manage.py collectstatic --no-input
# 12. Run: python manage.py migrate --no-input
#
# SECURITY WARNING:
# - Never commit actual .env file to version control
# - Keep SECRET_KEY secure and unique
# - Use strong database passwords
# - Enable HTTPS in production
# - Regularly rotate SECRET_KEY and API keys
#
